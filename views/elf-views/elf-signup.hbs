<h1>{{secondTitle}}</h1>

{{> flash_message}}

<section class="container centered">
  <div>
    <h2 class="flex p90">Becoming an Elf is an important choise, you need to be very creative to suggest 3 awesome gifts!</h2>
  
    <a href="/">Back</a>
  </div>

  <div class="card width-100">
    <form action="/process-signup" method="POST" class="block pad-40">

      <label for="">
        Name:
        <input type="text" name="name" placeholder="Name" class="input-label">
      </label>

      <label for="">
        Surname:
        <input type="text" name="surname" placeholder="Surname" class="input-label">
      </label>

      <label for="">
        Email:
        <input type="email" name="email" placeholder="Email address" class="input-label">
      </label>

      <label for="">
        Password:
        <input type="password" name="originalPassword" placeholder="Password" class="input-label">
      </label>

      <button class="margin-top-20 width-100 pad-12 border-rad-5">Sign up</button>

      <div class="flex pad-20 j-center">
        <a href="/google/login">Sign Up with Google</a>
      </div>

    </form>

    <div class="flex j-center bg-color-grey">
      <p>You are already an elf? <a href="/elf-login"> Log In</a></p>
    </div>

  </div>
</section>

<footer>
