<h1 class="color-white margin-bttm-40 .margin-top-40">{{secondTitle}}</h1>

{{> flash_message}}

<section class="flex width-70 margin-auto centered">
  <div class="pad-right-40 width-50">
    <h2 class="color-white">
      Becoming an Elf is an important choise, you need to be very creative to suggest 3 awesome gifts!
    </h2>

    <form action="/">
    <button class="color-white pad-12 border-rad-5 width-100 back-btn back-btn-left-bttm"><</button>
    </form>

  </div>

  <div class="card width-100 border-rad-5 width-50">
    <form action="/process-signup" method="POST" class="pad-40">

      <label for="">
        <p class="margins-p-name">Name:</p>
        <input type="text" name="name" placeholder="Name" class="input-label width-100">
      </label>

      <label for="">
        <p class="margins-p">Surname:</p>
        <input type="text" name="surname" placeholder="Surname" class="input-label width-100">
      </label>

      <label for="">
        <p class="margins-p">Email:</p>
        <input type="email" name="email" placeholder="Email address" class="input-label width-100">
      </label>

      <label for="">
        <p class="margins-p">Password:</p>
        <input type="password" name="originalPassword" placeholder="Password" class="input-label width-100">
      </label>

      <button class="margin-top-20 width-100 pad-12 border-rad-5 bg-btn color-white">
        <strong>Sign Up</strong>
      </button>

    </form>

      {{!-- <div class="flex j-center pad-bttn-20">
        <a href="/google/login" class="a-google">Sign Up with Google</a>
      </div> --}}

    <div class="flex j-center bg-color">
      <p>You are already an elf? <a href="/elf-login"> Log In</a></p>
    </div>

  </div>
</section>

